<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.myotome.go4lunch">


    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- TODO MYOTOME Permission non nécessaire, utilise plutôt un intent 'DIAL' : https://developer.android.com/guide/components/intents-common#DialPhone -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".ui.utils.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Go4Lunch.Personalize">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map_key" />

        <meta-data
            tools:replace="android:value"
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />


        <!-- TODO MYOTOME ScreenOrientation à n'utiliser que si c'est explicitement demandé par le CDC -->
        <activity
            android:name=".ui.detailed.DetailRestaurantActivity"
            android:parentActivityName=".ui.main.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.main.MainActivity"
            android:parentActivityName=".ui.authentication.AuthActivity"
            android:theme="@style/Theme.Go4Lunch.Personalize.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.authentication.AuthActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>